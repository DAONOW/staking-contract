end

transition UpdateAdmin(new_admin: ByStr20)
    current_impl <- implementation;
    msg = {_tag: "UpdateAdmin"; _recipient: current_impl; _amount: zero; admin: new_admin; initiator: _sender};
    msgs = one_msg msg;
    send msgs
end

